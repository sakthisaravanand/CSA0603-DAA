#include <stdio.h>
int main() {
    int arr[100], temp[100], n, i, j, mid, left, right, l, r, k, step;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    printf("Enter the elements: ");
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    for (step = 1; step < n; step *= 2) { 
        for (left = 0; left < n - step; left += 2 * step) {
            mid = left + step - 1;
            right = (left + 2 * step - 1 < n) ? left + 2 * step - 1 : n - 1;
            l = left;
            r = mid + 1;
            k = left;
            while (l <= mid && r <= right) {
                if (arr[l] <= arr[r]) {
                    temp[k++] = arr[l++];
                } else {
                    temp[k++] = arr[r++];
                }
            }
            while (l <= mid) {
                temp[k++] = arr[l++];
            }
            while (r <= right) {
                temp[k++] = arr[r++];
            }
            for (i = left; i <= right; i++) {
                arr[i] = temp[i];
            }
        }
    }
    printf("Sorted array: ");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
